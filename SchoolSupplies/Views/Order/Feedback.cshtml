@model SchoolSupplies.Models.FeedbackViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/CreateOrder.cshtml";
}

<h2>Feedback</h2>

<div class="container">
    <form asp-controller="Order" asp-action="Feedback" method="post">
        <div class="form-group">
            <label for="content">Content:</label>
            <textarea class="form-control" id="content" name="Content" rows="5" required>@Model.Content</textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="rating">Rating(1-5):</label>
            <input type="number" class="form-control" id="rating" name="Rating" min="1" max="5" required value="@Model.Rating">
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>
        <input type="hidden" name="ProductId" value="@Model.ProductId" />
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <input type="hidden" name="Datetime" value="@Model.Datetime" />
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}