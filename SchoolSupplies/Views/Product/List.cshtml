@model List<SchoolSupplies.Models.Entities.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>DataTable Product</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="DashBoardStaff" asp-action="DashBoard">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">DataTable Product</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <a asp-controller="Product" asp-action="Create" class="btn icon icon-left btn-primary"> Create new Product</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="table1">
                            <thead>
                                <tr>
                                    <th>Product ID</th>
                                    <th>Product Name</th>
                                    <th>Product Image</th>
                                    <th>Product Description</th>
                                    <th>Product Price</th>
                                    <th>Product Discount</th>
                                    <th>Category Name</th>
                                    <th>Brand Name</th>

                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null)
                                {
                                    <tr>
                                        <td>No date</td>
                                        <td>No date</td>
                                        <td>No date</td>
                                        <td>No date</td>
                                        <td>No date</td>
                                        <td>No date</td>
                                        <td>No date</td>
                                        <td>No date</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>@product.ProductId</td>
                                            <td>@product.ProductName</td>
                                            <td><img src="~/uploads/@product.ProductUrlImageMain" alt="Product Image" style="width: 100px; height: 100px;" /></td>
                                            <td>@product.ProductDescription</td>
                                            <td>@product.ProductPrice</td>
                                            <td>@product.ProductDiscount</td>                                      
                                            <td>@product.Category.CategoryName</td>
                                            <td>@product.Brand.BrandName</td>
                                            <td>
                                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" asp-route-img="@product.ProductUrlImageMain" class="btn icon btn-primary"><i class="bi bi-pencil"></i></a>
                                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductId" asp-route-img="@product.ProductUrlImageMain" class="btn icon btn-danger" onclick="return confirm('Are you sure');"><i class="bi bi-x"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

