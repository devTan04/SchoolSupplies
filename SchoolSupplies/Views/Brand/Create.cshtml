@model SchoolSupplies.Models.AddBrandViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="successMessage" class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["WarningMessage"] != null)
                {
                    <div id="warningMessage" class="alert alert-warning">
                        @TempData["WarningMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div id="errorMessage" class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Create new brand</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="DashBoardStaff" asp-action="DashBoard">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Create new brand</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <form class="form" asp-controller="Brand" asp-action="Create" method="post">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="first-name-column">Brand Name</label>
                                                <input type="text" class="form-control"
                                                       placeholder="Input Brand Name" asp-for="BrandName">
                                                <span asp-validation-for="BrandName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="last-name-column">Brand Description</label>
                                                <input type="text" class="form-control"
                                                       placeholder="Input Brand Desciption" asp-for="BrandDescription">
                                                <span asp-validation-for="BrandDescription" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Submit</button>
                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Reset</button>
                                        <a asp-action="List" class="btn btn-primary me-1 mb-1">Back to list</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        hideMessage("successMessage", 1000); // ẩn thông báo thành công sau 1 giây
        hideMessage("warningMessage", 2000); // ẩn thông báo cảnh báo sau 2 giây
        hideMessage("errorMessage", 3000); // ẩn thông báo lỗi sau 3 giây
    });

    function hideMessage(messageId, timeout) {
        var message = document.getElementById(messageId);
        if (message) {
            setTimeout(function () {
                message.style.display = "none";
            }, timeout);
        }
    }
</script>

