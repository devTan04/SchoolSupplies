@model SchoolSupplies.Models.Entities.Brand
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Update a brand</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="DashBoardStaff" asp-action="DashBoard">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Update a brand</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Update a brand</h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                @if (Model == null)
                                {
                                    <p>No Brand was found with this Id</p>
                                }
                                else
                                {
                                    <form class="form" asp-controller="Brand" asp-action="Edit" method="post">
                                        <div class="row">
                                            <div class="col-md-6 col-12">
                                                <div class="form-group">
                                                    <label for="first-name-column">Brand ID</label>
                                                    <input type="text" class="form-control" asp-for="BrandId" readonly>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-12">
                                                <div class="form-group">
                                                    <label for="first-name-column">Brand Name</label>
                                                    <input type="text" class="form-control" placeholder="First Name" asp-for="BrandName">
                                                    <span asp-validation-for="BrandName" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 col-12">
                                                <div class="form-group">
                                                    <label for="last-name-column">Brand Description</label>
                                                    <input type="text" class="form-control" placeholder="Last Name" asp-for="BrandDescription">
                                                    <span asp-validation-for="BrandDescription" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-12 d-flex justify-content-end">
                                            <button type="submit" class="btn btn-primary me-1 mb-1">Update</button>
                                            <a asp-action="List" class="btn btn-primary me-1 mb-1">Back to list</a>
                                        </div>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

