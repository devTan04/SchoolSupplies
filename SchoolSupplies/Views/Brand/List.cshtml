@model List<SchoolSupplies.Models.Entities.Brand>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>

    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>DataTable Brand</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="DashBoardStaff" asp-action="DashBoard">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">DataTable Brand</li>
                        </ol>
                    </nav>
                </div>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="successMessage" class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["WarningMessage"] != null)
                {
                    <div id="warningMessage" class="alert alert-warning">
                        @TempData["WarningMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div id="errorMessage" class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header">
                    <a asp-controller="Brand" asp-action="Create" class="btn icon icon-left btn-primary"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg> Create new Brand</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="table1">
                            <thead>
                                <tr>
                                    <th>Brand ID</th>
                                    <th>Brand Name</th>
                                    <th>Brand Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model == null)
                                {
                                    <tr>
                                        <td>No date</td>
                                        <td>No date</td>
                                        <td>No date</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var brand in Model)
                                    {
                                        <tr>
                                            <td>@brand.BrandId</td>
                                            <td>@brand.BrandName</td>
                                            <td>@brand.BrandDescription</td>
                                            <td>
                                                <a asp-controller="Brand" asp-action="Edit" asp-route-id="@brand.BrandId" class="btn icon btn-primary"><i class="bi bi-pencil"></i></a>
                                                <a asp-action="Delete" asp-route-id="@brand.BrandId" class="btn icon btn-danger" onclick="return confirm('Are you sure');"><i class="bi bi-x"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        hideMessage("successMessage", 1000); // ẩn thông báo thành công sau 1 giây
        hideMessage("warningMessage", 2000); // ẩn thông báo cảnh báo sau 2 giây
        hideMessage("errorMessage", 3000); // ẩn thông báo lỗi sau 3 giây
    });

    function hideMessage(messageId, timeout) {
        var message = document.getElementById(messageId);
        if (message) {
            setTimeout(function () {
                message.style.display = "none";
            }, timeout);
        }
    }
</script>

