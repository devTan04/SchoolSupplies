@model SchoolSupplies.Models.AddCategoryViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="successMessage" class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["WarningMessage"] != null)
                {
                    <div id="warningMessage" class="alert alert-warning">
                        @TempData["WarningMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div id="errorMessage" class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Create new category</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="DashBoardStaff" asp-action="DashBoard">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Create new category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <form class="form" asp-controller="Category" asp-action="Create" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="first-name-column">Category Name</label>
                                                <input type="text" class="form-control"
                                                       placeholder="Input Category Name" asp-for="CategoryName">
                                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="last-name-column">Category Description</label>
                                                <input type="text" class="form-control"
                                                       placeholder="Input Category Desciption" asp-for="CategoryDescription">
                                                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="input-group mb-3">
                                                <label for="first-name-column">Category Image</label>
                                                <input type="file" name="file" class="form-control" onchange="chooseFile(this)" accept="image/gif, image/jpeg, image/png" style="width: 100%">
                                            </div>
                                            <span asp-validation-for="CategoryImage" class="text-danger"></span>
                                        </div>
                                        <div> <img style="height:200px;width:250px" id="image" /></div>

                                    </div>

                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Submit</button>
                                        <button type="reset" class="btn btn-light-secondary me-1 mb-1">Reset</button>
                                        <a asp-action="List" class="btn btn-primary me-1 mb-1">Back to list</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<script>
    function chooseFile(fileInput) {
        if (fileInput.files && fileInput.files[0]) {
            var render = new FileReader();

            render.onload = function (e) {
                $('#image').attr('src', e.target.result);
            }
            render.readAsDataURL(fileInput.files[0]);
        }
    }
    document.addEventListener("DOMContentLoaded", function () {
        hideMessage("successMessage", 1000); // ẩn thông báo thành công sau 1 giây
        hideMessage("warningMessage", 2000); // ẩn thông báo cảnh báo sau 2 giây
        hideMessage("errorMessage", 3000); // ẩn thông báo lỗi sau 3 giây
    });

    function hideMessage(messageId, timeout) {
        var message = document.getElementById(messageId);
        if (message) {
            setTimeout(function () {
                message.style.display = "none";
            }, timeout);
        }
    }
</script>
