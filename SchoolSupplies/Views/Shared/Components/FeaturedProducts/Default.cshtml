@model SchoolSupplies.Models.FeaturedProductsViewModel

<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Featured Product</h2>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var product in Model.Products)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="@Url.Content("~/uploads/" + product.ProductUrlImageMain)">
                            <ul class="featured__item__pic__hover">
 @*                                <li>
                                    <form asp-controller="Product" asp-action="UpdateProductLike" method="post">
                                        <input type="hidden" name="productId" value="@product.ProductId" />
                                        <button type="submit" class="like-btn @(product.ProductLike ? "liked" : "")">
                                            <a href="#"> <i class="fa fa-heart"></i></a>
                                        </button>
                                    </form>
                                </li> *@
                                <li><a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.ProductId"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-controller="ProductDetails" asp-action="Details" asp-route-id="@product.ProductId">@product.ProductName</a></h6>
                            <h5>@product.ProductPrice.ToString("C")</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
