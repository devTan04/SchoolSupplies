@model dynamic

<div class="card">
    <div class="card-header">
    </div>
    <div class="card-body">
        <canvas id="chart-account-by-gender" style="height: 400px;"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var ctx = document.getElementById('chart-account-by-gender').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Male', 'Female'],
                datasets: [{
                    label: 'Accounts by Gender',
                    data: [@Model.Male, @Model.Female],
                    backgroundColor: ['#36A2EB', '#FF6384'],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Accounts by Gender'
                    }
                }
            }
        });
    });
</script>
