@model List<SchoolSupplies.Models.Entities.Category>
<section class="categories">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Categories</h2>
                </div>
            </div>
            <div class="categories__slider owl-carousel">
                @foreach (var category in Model)
                {
                    <div class="col-lg-3">
                        <div class="categories__item set-bg" data-setbg="@Url.Content("~/categories/" + category.CategoryImage)">
                            <h5>
                                <a href="#">
                                    @category.CategoryName
                                </a>
                            </h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<script>
    $(document).ready(function() {
        $('.set-bg').each(function() {
            var bg = $(this).data('setbg');
            $(this).css('background-image', 'url(' + bg + ')');
        });
    });
</script>
