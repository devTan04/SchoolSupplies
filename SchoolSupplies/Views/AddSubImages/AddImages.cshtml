@model SchoolSupplies.Models.SubImageViewModel

@{
    ViewData["Title"] = "Add Sub Images";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="successMessage" class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["WarningMessage"] != null)
                {
                    <div id="warningMessage" class="alert alert-warning">
                        @TempData["WarningMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div id="errorMessage" class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Add Sub Images</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="DashBoardStaff" asp-action="DashBoard">Dashboard</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Add Sub Images</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <form asp-controller="AddSubImages" asp-action="AddImages" method="post" enctype="multipart/form-data">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="subImages">Sub Images</label>
                                                <input class="form-control" type="file" id="subImages" name="SubImages" multiple />
                                                <input type="hidden" asp-for="ProductId" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Submit</button>
                                        <a asp-controller="Product" asp-action="Display" class="btn btn-primary me-1 mb-1">Back to list</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        hideMessage("successMessage", 1000); // Hide success message after 1 second
        hideMessage("warningMessage", 2000); // Hide warning message after 2 seconds
        hideMessage("errorMessage", 3000); // Hide error message after 3 seconds
    });

    function hideMessage(messageId, timeout) {
        var message = document.getElementById(messageId);
        if (message) {
            setTimeout(function () {
                message.style.display = "none";
            }, timeout);
        }
    }
</script>
