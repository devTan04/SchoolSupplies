@model SchoolSupplies.Models.Entities.Image

@{
    ViewData["Title"] = "Update Sub Image";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="main">
    <header class="mb-3">
        <a href="#" class="burger-btn d-block d-xl-none">
            <i class="bi bi-justify fs-3"></i>
        </a>
    </header>
    <div class="page-heading">
        <div class="page-title">
            <div class="row">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div id="successMessage" class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div id="errorMessage" class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <div class="col-12 col-md-6 order-md-1 order-last">
                    <h3>Update Sub Image</h3>
                </div>
                <div class="col-12 col-md-6 order-md-2 order-first">
                    <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="DashBoardStaff" asp-action="DashBoard">Dashboard</a></li>
                            <li class="breadcrumb-item"><a asp-controller="Product" asp-action="ViewImages" asp-route-id="@Model.ProductId">View Images</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Update Sub Image</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-content">
                            <div class="card-body">
                                <form asp-controller="AddSubImages" asp-action="UpdateSubImage" method="post" enctype="multipart/form-data">
                                    <div class="form-group">
                                        <img src="~/uploads/@Model.SupImage" alt="Sub Image" style="width: 200px; height: 200px;" />
                                    </div>
                                    <div class="form-group">
                                        <label for="newImage">Select New Image</label>
                                        <input class="form-control" type="file" id="newImage" name="newImage" />
                                    </div>
                                    <input type="hidden" name="id" value="@Model.ImageId" /> <!-- Pass ImageId -->
                                    <div class="col-12 d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary me-1 mb-1">Update</button>
                                        <a asp-controller="AddSubImages" asp-action="ViewImages" asp-route-id="@Model.ProductId" class="btn btn-primary me-1 mb-1">Back</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        hideMessage("successMessage", 1000); // Hide success message after 1 second
        hideMessage("errorMessage", 3000); // Hide error message after 3 seconds
    });

    function hideMessage(messageId, timeout) {
        var message = document.getElementById(messageId);
        if (message) {
            setTimeout(function () {
                message.style.display = "none";
            }, timeout);
        }
    }
</script>
